@{
    ViewData["Title"] = "Dashboard Kontrak";
}
<ol class="breadcrumb float-xl-end">
        <li class="breadcrumb-item"><a href="javascript:void(0);"> <i data-feather="package"></i></a></li>
        <li class="breadcrumb-item active" aria-current="page"><span>Dashboard</span></li>
    </ol>
    <h1 class="page-header">Dashboard</h1>
    <div class="panel panel-inverse">
        <div class="accordion" id="accordion">
            <div class="accordion-item border-0">
                <div class="accordion-header" id="headingOne">
                    <button class="accordion-button bg-gray-900 text-white px-3 py-10px pointer-cursor" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne">
                        <i class="fa fa-circle fa-fw text-blue me-2 fs-8px"></i>Filter
                    </button>
                </div>
                <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordion">
                    <div class="accordion-body bg-gray-800 text-white">
                        <div class="row">
                            <div class="col-12">
                                <div class="page-header">
                                    <select name="project_filter" id="project_filter" class="form-control form-control-sm">
                                    @foreach (var val in ViewBag.project)
                                    {
                                        <option value="@(val.projectNo)" data-id="@(val.id)" data-desc="@(val.description)" data-rev="@(val.revision)"> @(val.description)</option>
                                    }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-sm-6">
            <div class="widget widget-stats bg-green mb-7px">
                <div class="stats-icon"><i class="fa fa-route fa-fw"></i></div>
                <div class="stats-content">
                    <div class="stats-title">ON TRACK</div>
                    <div class="stats-number on_track"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="widget widget-stats bg-orange  mb-7px">
                <div class="stats-icon"><i class="fa fa-clock fa-fw"></i></div>
                <div class="stats-content">
                    <div class="stats-title">POTENSI DELAY</div>
                    <div class="stats-number potensi_delay"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="widget widget-stats bg-red  mb-7px">
                <div class="stats-icon"><i class="fa fa-clock fa-fw"></i></div>
                <div class="stats-content">
                    <div class="stats-title">DELAY</div>
                    <div class="stats-number delay"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="widget widget-stats bg-blue mb-7px">
                <div class="stats-icon"><i class="fa fa-check fa-fw"></i></div>
                <div class="stats-content">
                    <div class="stats-title">READY</div>
                    <div class="stats-number sp"></div>
                </div>
            </div>
        </div>
        
    </div>
    <div class="row">
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12 layout-spacing">
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title">Paket Kontrak</h4>
                    <div class="panel-heading-btn">
                        <select name="kontrak_filter" id="kontrak_filter" class="form-control form-control-sm">
                            <option value="UNIT">By Unit</option>
                            <option value="PENGADAAN">By Kategori Pengadaan</option>
                            <option value="ASAL_SOURCE">By Asal Source</option>
                            <option value="SOURCE_VENDOR">By Source Vendor</option>
                            <option value="DIREKSI_PENGAWAS">By Direksi Pengawas</option>
                            <option value="TIPE">By Tipe</option>
                            <option value="KRITERIA">By Kriteria</option>
                            <option value="KATEGORI">By Kategori</option>
                        </select>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand" style="margin-left:10px"><i class="fa fa-expand"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                    </div>
                </div> 
                <div class="panel-body">
                    <div class="widget-content">
                        <div id="chart_kontrak_unit" style="width: 100%;height:400px;"></div>
                    </div>
                </div>
            </div>
        </div>
         <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12 layout-spacing">
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title">Grafik Kontrak Berdasarkan Status</h4>
                    <div class="panel-heading-btn">
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                    </div>
                </div> 
                <div class="panel-body">
                    <div class="widget-content">
                        <div id="chart_kontrak_status" style="width: 100%;height:400px;"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12 layout-spacing">
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title"></h4>
                    <div class="panel-heading-btn">
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                    </div>
                </div> 
                <div class="panel-body">
                    <div data-scrollbar="true" data-height="430px">
                        
                            <!-- BEGIN card-body -->
                            <div class="card-body" style="background: no-repeat bottom right; background-image: url(assets/assets/img/svg/dd.png); background-size: auto 90%;">
                                <!-- BEGIN title -->
                                <div class="mb-3 text-gray-500 ">
                                    <b>KONTRAK BERDASARKAN STATUS</b>
                                   
                                </div>
                                <!-- END title -->
                                <!-- BEGIN sales -->
                                <h2 class="mb-10px"><span data-animation="number" data-value="0" class="tot_kontrak">0.00</span></h2>
                            </div>
                            <!-- END card-body -->
                            <!-- BEGIN widget-list -->
                            <div class="widget-list rounded-bottom dark-mode" id="list_contract_status"> 
                               
                            </div>
                            <!-- END widget-list -->
                        
                    </div>
                </div>
            </div>
        </div>   
    </div>
    <div class="modal fade" id="Modal_kontrak" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title judul-modal">Data Paket Jasa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true"  aria-label="Close">
                </button>
            </div>
            <div class="modal-body">        
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="table" class="table small table-danger table-bordered dataTables_wrapper" style="    border-color: #ff8e8a; --bs-table-accent-bg: #ffe4ce; font-size:0.6em;" width="1000px">
                                <thead>
                                    <tr>
                                        <th  rowspan="3" style="vertical-align: middle; color:white; --bs-table-accent-bg: #482a00;">No.WO.PO.PR</th>
                                        <th width="200px" rowspan="3"  style="vertical-align: middle; color:white; --bs-table-accent-bg: #482a00;">judul Pekerjaan</th>
                                        <th rowspan="3" colspan="2" style="vertical-align: middle; color:white; --bs-table-accent-bg: #482a00;">Status</th>
                                        
                                        <td  colspan="19" style="text-align: center; color:white; --bs-table-accent-bg: #482a00;">Proses Paket Kontrak Jasa</td>
                                        <th  rowspan="3" style="vertical-align: middle; color:white; --bs-table-accent-bg: #482a00;">Keterangan</th>
                                    </tr>
                                    <tr>
                                        <td colspan="3" style="text-align: center; color:white; --bs-table-accent-bg: #927449;">Turn Arround</td>
                                        <td colspan="16" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">Contract Office</td>
                                    </tr>
                                    <tr>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #927449;">Susun Kak</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #927449;">Susun OE</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #927449;">Kirim CO</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">Pendaftaran</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">Sertifikasi</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">Prakualifikasi</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">Undangan</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">Penjelasan</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">Buka PH</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">Buka Dokumen</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">Evaluasi</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">Negosiasi</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">Tap Nang</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">Kep Nang</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">Pengumaman</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">Ajuan Sanggah</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">Jawab Sanggah</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">Juk Nang</th>
                                        <th width="26px" style="text-align: center; color:white; --bs-table-accent-bg: #d27d00;">SPB</th>
                                    </tr>
                                </thead> 
                                <tbody id="isi_table">
                                <tr>
                                        <td colspan="24" style="text-align:center">Data tidak ditemukan</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>

                    </div>
                
            </div>           
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/assets/amcharts5/index.js"></script>
    <script src="~/assets/amcharts5/xy.js"></script>
    <script src="~/assets/amcharts5/percent.js"></script>
    <script src="~/assets/amcharts5/themes/Animated.js"></script>
    <script src="~/js/DashboardKontrak.js"></script>
}