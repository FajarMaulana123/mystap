@model List<ContractTracking>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
   
    <title>Summary Progress Contract</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/assets/css/default/app.min.css" rel="stylesheet" />
    <link href="~/assets/assets/css/vendor.min.css" rel="stylesheet" />
    <style>

        table, td, th {
            border: 1px solid;
            border-color: #ff8e8a;
            background: #ffe4ce;
            font-size: 6px;
        }

        thead, tfoot {
            display: table-row-group;
        }
    </style>
</head>
<body>
    <div class="row text-center">
        <p>Progress Paket Kontrak</p>
        <p style="margin-top:-20px">project</p>
    </div>
    <div class="row">

        <div class="table-responsive">
            <table id="table" class="table table-bordered table-sm" width="100%">
                <thead>
                    <tr>
                        <td rowspan="3" style=" text-align: center; color:white; background: #482a00;">No WO,PO,PR</td>
                        <td width="10%" rowspan="3" style=" text-align: center; color:white; background: #482a00;">judul Pekerjaan</td>
                        <td rowspan="3" colspan="2" style=" text-align: center; color:white; background: #482a00;">Status</td>

                        <td colspan="19" style=" text-align: center; color:white; background: #482a00;">Proses Paket Kontrak Jasa</td>
                        <td rowspan="3" style=" text-align: center; color:white; background: #482a00;">Keterangan</td>
                    </tr>
                    <tr>
                        <td colspan="3" style="text-align: center; color:white; background: #927449;">Turn Arround</td>
                        <td colspan="16" style="text-align: center; color:white; background: #d27d00;">Contract Office</td>
                    </tr>
                    <tr>
                        <td style="text-align: center; color:white; background: #927449;">Susun Kak</td>
                        <td style="text-align: center; color:white; background: #927449;">Susun OE</td>
                        <td style="text-align: center; color:white; background: #927449;">Kirim CO</td>
                        <td style="text-align: center; color:white; background: #d27d00;">Pendaftaran</td>
                        <td style="text-align: center; color:white; background: #d27d00;">Sertifikasi</td>
                        <td style="text-align: center; color:white; background: #d27d00;">Prakualifikasi</td>
                        <td style="text-align: center; color:white; background: #d27d00;">Undangan</td>
                        <td style="text-align: center; color:white; background: #d27d00;">Penjelasan</td>
                        <td style="text-align: center; color:white; background: #d27d00;">Buka PH</td>
                        <td style="text-align: center; color:white; background: #d27d00;">Buka Dokumen</td>
                        <td style="text-align: center; color:white; background: #d27d00;">Evaluasi</td>
                        <td style="text-align: center; color:white; background: #d27d00;">Negosiasi</td>
                        <td style="text-align: center; color:white; background: #d27d00;">Tap Nang</td>
                        <td style="text-align: center; color:white; background: #d27d00;">Kep Nang</td>
                        <td style="text-align: center; color:white; background: #d27d00;">Pengumaman</td>
                        <td style="text-align: center; color:white; background: #d27d00;">Ajuan Sanggah</td>
                        <td style="text-align: center; color:white; background: #d27d00;">Jawab Sanggah</td>
                        <td style="text-align: center; color:white; background: #d27d00;">Juk Nang</td>
                        <td style="text-align: center; color:white; background: #d27d00;">SPB</td>
                    </tr>
                </thead>
                <tbody id="isi_table">
                    
                    @if(Model != null)
                    {
                        @foreach(var val in Model)
                        {
                            var isi = "";
                            @if(val.aktualSP != null)
                            {
                                isi += "<span class='text-primary'><i class='fa fa-circle fs - 20px fa-fw me-5px'></i></span>";
                            }
                            else
                            {
                                if(val.t_light > 30)
                                {
                                    isi += "<span class='text-success'><i class='fas fa-lg fa-fw me-10px fa-circle'></i></span>";
                                }else if(val.t_light <= 30 && val.t_light > 20)
                                {
                                    isi += "<span class='text-warning'><i class='fas fa-lg fa-fw me-10px fa-circle'></i></span>";
                                }else if(val.t_light <= 20)
                                {
                                    isi += "<span class='text-danger'><i class='fas fa-lg fa-fw me-10px fa-circle'></i></span>";
                                }
                                else
                                {
                                    isi += "-";
                                }
                            }

                            <tr>
                                <td rowspan="2">@(val.WO) @(val.po) @(val.PR)</td>
                                <td rowspan="2">@(val.judulPekerjaan)</td>
                                <td rowspan="2"><br><span class="text-danger"><i class='fa fa-circle '></i></span>@(isi) @(val.pic)</td>
                                <td class="text-warning">P</td>
                                <td>@(val.target_kak)</td>
                                <td>@(val.target_oe)</td>
                                <td>@(val.target_co)</td>
                                <td>@(val.target_pengumuman)</td>
                                <td>@(val.target_sertifikasi)</td>
                                <td>@(val.target_prakualifikasi)</td>
                                <td>@(val.target_undangan)</td>
                                <td>@(val.target_pemberian)</td>
                                <td>@(val.targetBukaPH)</td>
                                <td>@(val.target_pembukaan)</td>
                                <td>@(val.target_evaluasi)</td>
                                <td>@(val.target_negosiasi)</td>
                                <td>@(val.target_usulan_pemenang)</td>
                                <td>@(val.target_keputusan_pemenang)</td>
                                <td>@(val.target_pengumuman_pemenang)</td>
                                <td>@(val.target_pengajuan_sanggah)</td>
                                <td>@(val.target_jawaban_sanggah)</td>
                                <td>@(val.target_penunjukan_pemenang)</td>
                                <td>@(val.targetSP)</td>
                                <td rowspan="2">@(val.currStat)</td>
                            </tr>
                            <tr>
                                <td>A</td>
                                <td>@(val.akt_kak)</td>
                                <td>@(val.akt_oe)</td>
                                <td>@(val.aktualCO)</td>
                                <td>@(val.akt_pengumuman)</td>
                                <td>@(val.akt_sertifikasi)</td>
                                <td>@(val.akt_prakualifikasi)</td>
                                <td>@(val.akt_undangan)</td>
                                <td>@(val.akt_pemberian)</td>
                                <td>@(val.aktualBukaPH)</td>
                                <td>@(val.akt_pembukaan)</td>
                                <td>@(val.akt_evaluasi)</td>
                                <td>@(val.akt_negosiasi)</td>
                                <td>@(val.akt_usulan_pemenang)</td>
                                <td>@(val.akt_keputusan_pemenang)</td>
                                <td>@(val.akt_pengumuman_pemenang)</td>
                                <td>@(val.akt_pengajuan_sanggah)</td>
                                <td>@(val.akt_jawaban_sanggah)</td>
                                <td>@(val.akt_penunjukan_pemenang)</td>
                                <td>@(val.aktualSP)</td>
                               
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="25" style="text-align:center">Data tidak ditemukan - Silahkan Filter data Contract terlebih dahulu !</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</body>
</html>