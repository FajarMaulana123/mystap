@{
    ViewData["Title"] = "Contract Tracking Progress";
}
<ol class="breadcrumb float-xl-end">
        <li class="breadcrumb-item"><a href="javascript:void(0);">Paket Kontrak</a></li>
        <li class="breadcrumb-item active" aria-current="page"><span>Manage Paket Jasa</span></li>
    </ol>
    <h1 class="page-header">Progress Paket Kontrak</h1>
    <div class="panel panel-inverse">
        <div class="accordion" id="accordion">
            <div class="accordion-item border-0">
                <div class="accordion-header" id="headingOne">
                    <button class="accordion-button bg-gray-900 text-white px-3 py-10px pointer-cursor" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne">
                        <i class="fa fa-circle fa-fw text-blue me-2 fs-8px"></i>Filter
                    </button>
                </div>
                <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordion">
                    <div class="accordion-body bg-gray-800 text-white">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="" >Project</label>
                                    <select name="project_filter" id="project_filter" class="form-control form-control-sm">
                                    @foreach (var val in ViewBag.project)
                                    {
                                        <option value="@(val.id)" data-desc="@(val.description)"> @(val.description)</option>
                                    }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="" >Kategori Paket</label>
                                    <select name="kategori_paket_filter" id="kategori_paket_filter" class="form-control form-control-sm">
                                        <option value="">All Kategori Pekerjaan</option>
                                    @foreach (var val in ViewBag.kategori_paket)
                                    {
                                        <option value="@(val.item)"> @(val.item)</option>
                                    }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="">PIC</label>
                                    <select name="pic_filter" id="pic_filter" class="form-control form-control-sm">
                                        <option value="">All PIC</option>
                                    @foreach (var val in ViewBag.user)
                                    {
                                        <option value="@(val.alias)">@(val.alias)</option>
                                    }
                                    </select>
                                </div>
                            </div>
                            
                        </div>
                        <div class="row mt-3 ">
                            <div class="col-md-12">
                                <button class="btn btn-primary" id="filter"> Filter</button>
                                <button class="btn btn-warning" id="reset"> Reset</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-inverse">
        <div class="panel-heading">
            <h4 class="panel-title">Data Progress Paket Kontrak</h4>
           
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                
            </div>
        </div> 
        <div class="panel-body">
            <div class="row">
                <div class="col-11">
                    <div class="d-flex mb-2">
                        <span class="badge  text-dark px-2 pt-5px pb-5px rounded fs-12px d-inline-flex align-items-center"> T.Light :</span>
                        <span class="badge  text-green-100 px-2 pt-5px pb-5px rounded fs-12px d-inline-flex align-items-center"><i class="fa fa-circle fs-9px fa-fw me-5px"></i> On Track</span>
                        <span class="badge  text-warning px-2 pt-5px pb-5px rounded fs-12px d-inline-flex align-items-center"><i class="fa fa-circle fs-9px fa-fw me-5px"></i> Potensi Delay</span>
                        <span class="badge  text-danger px-2 pt-5px pb-5px rounded fs-12px d-inline-flex align-items-center"><i class="fa fa-circle fs-9px fa-fw me-5px"></i> Delay</span>
                        <span class="badge  text-primary px-2 pt-5px pb-5px rounded fs-12px d-inline-flex align-items-center"><i class="fa fa-circle fs-9px fa-fw me-5px"></i> SP</span>
                    @* <button class="btn btn-secondary px-2 pt-5px pb-5px d-inline-flex align-items-center" id="ex" name="GridHtml">Export To PDF</button> *@
                    <button class="btn btn-secondary px-2 pt-5px pb-5px d-inline-flex align-items-center" id="btnSubmit" name="GridHtml">Export To PDF</button>
                       
                    </div>
                </div>
                <div class="col-1">
                    <div class="d-flex mb-2">
                    <a href="/contracttracking" class="btn btn-warning" style="marg">Kembali</a>
                    </div>
                </div>
            </div>

