@{
    ViewData["Title"] = "Reservasi";
}
<ol class="breadcrumb float-xl-end">
        <li class="breadcrumb-item"><a href="javascript:void(0);"> <i data-feather="map-pin"></i></a></li>
        <li class="breadcrumb-item active" aria-current="page"><span>Reservasi</span></li>
    </ol>
    <h1 class="page-header">Reservasi</h1>
    <div class="panel panel-inverse">
        <div class="accordion" id="accordion">
            <div class="accordion-item border-0">
                <div class="accordion-header" id="headingOne">
                    <button class="accordion-button bg-gray-900 text-white px-3 py-10px pointer-cursor" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne">
                        <i class="fa fa-circle fa-fw text-blue me-2 fs-8px"></i>Filter
                    </button>
                </div>
                <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordion">
                    <div class="accordion-body bg-gray-800 text-white">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="" >Project</label>
                                    <select name="project_filter" id="project_filter" class="form-control form-control-sm">
                                    @foreach (var val in ViewBag.project)
                                    {
                                        <option value="@(val.revision)" data-id="@(val.id)"> @(val.description)</option>
                                    }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="" >Status Ready</label>
                                    <select name="status_ready" id="status_ready" class="form-control form-control-sm">
                                        <option value="">All</option>
                                        <option value="delay">Delay</option>
                                        <option value="on_track">On Track</option>
                                        <option value="ready">Ready</option>
                                    </select>
                                </div>
                            </div>
                            
                        </div>
                        <div class="row mt-3 ">
                            <div class="col-md-12">
                                <button class="btn btn-primary" id="filter"> Filter</button>
                                <button class="btn btn-warning" id="reset"> Reset</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-inverse">
        <div class="panel-heading">
            <h4 class="panel-title">Data Reservasi</h4>
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
            </div>
        </div> 
        <div class="panel-body">
            <div class="table-responsive">
                <table id="table" class="table small table-striped table-bordered dataTables_wrapper" width="100%">
                    <thead>
                        <tr>
                            <th>Status Reservasi</th>
                            <th>Status Ready</th>
                            <th>Order</th>
                            <th>Description</th>
                            <th>Main Work</th>
                            <th>Revision</th>
                            <th>ReservNo</th>
                            <th>Material</th>
                            <th width="50px">Description</th>
                            <th>Item WO</th>
                            <th>PR</th>
                            <th>Item PR</th>
                            <th>PO</th>
                            <th>Item PO</th>
                            <th>Qty WO</th>
                            <th>Qty PR</th>
                            <th>Qty PO</th>
                            <th>Balance</th>
                            <th>DT</th>
                            <th>Prog_Deliv Date</th>
                            <th id="prog_md"></th>
                            <th>action</th>
                            <!-- <th>Qty</th>
                            <th>MvT</th> -->
                        </tr>
                    </thead>
                    
                </table>
            </div>
        </div>
    </div>


<div class="modal fade" id="import" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title judul-modal" id="Modal"></h5>
                <button type="button" class="btn-close"  data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form id="import-form">
            <div class="modal-body">    
                <input type="hidden" name="hidden_status" id="hidden_status" value="add">
                <input type="hidden" name="hidden_info" id="hidden_info" value="">
                <div class="row">
                    <div class="col-md-12 mb-2">
                        <div class="form-group">
                            <label>Import File </label>
                            <input type="file" name="import" id="import" accept=".xls" class="form-control form-control-sm">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="javascript:;" class="btn btn-white" data-bs-dismiss="modal">Close</a>
                <button type="reset" class="btn btn-dark">Reset</button>
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/Reservasi.js"></script>
}
