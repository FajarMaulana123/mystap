@removeTagHelper Microsoft.AspNetCore.Mvc.TagHelpers.OptionTagHelper, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Paket Joblist";
    var selected_project = "";
}
<ol class="breadcrumb float-xl-end">
        <li class="breadcrumb-item"><a href="javascript:void(0);">   <i data-feather="file"></i></a></li>
        <li class="breadcrumb-item"><a href="/paket_joblist">Paket Joblist</a></li>
        <li class="breadcrumb-item active" aria-current="page"><span>Edit Paket Joblist</span></li>
    </ol>
    <h1 class="page-header">Edit Paket Joblist</h1>  
    <div class="row">
        <div class="col-xl-3">
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title">Paket Joblist</h4>
                    <div class="panel-heading-btn">
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                    </div>
                </div> 
                <div class="panel-body">
                    <form id="paket-form">
                        <div class="row mb-2">
                            <div class="col-md-12 mb-2">
                                <div class="form-group">
                                    <label for="">Project</label>
                                    <select name="project_filter" id="project_filter" class="form-control form-control-sm" disabled>
                                    @foreach (var val in ViewBag.project)
                                    {
                                        @if (ViewBag.paket_joblist.projectID == val.id)
                                        {
                                            selected_project = "selected";
                                        }
                                        else
                                        {
                                            selected_project = "";
                                        }
                                        <option value="@(val.id)" data-desc="@(val.description)" @(selected_project)>@(val.description)</option>
                                    }
                                </select>
                                </div> 
                            </div>
                            <div class="col-md-12 mb-2">
                                <div class="form-group">
                                    <label for="">No. Paket</label>
                                    <div class="row">
                                        <div class="col-md-8">
                                            <input type="number" name="no_paket" id="no_paket" class="form-control form-control-sm " value="@(ViewBag.paket_joblist.no_paket)">
                                        </div>
                                        <div class="col-md-4 form-check mt-2">
                                            <input class="form-check-input" name="additional" type="checkbox" value="1" @((ViewBag.paket_joblist.additional == 1) ? "checked" : "") />
                                            <label class="form-check-label" for="">Additional</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 mb-2">
                                <div class="form-group">
                                    <label for="">TagNo. Joblist</label>
                                <input type="text" name="tag_no" id="tag_no" class="form-control form-control-sm" value="@(ViewBag.paket_joblist.tag_no)">
                                </div>
                            </div>
                            <div class="col-md-12 mb-2">
                                <div class="form-group">
                                    <label for="">No Memo</label>
                                <input type="text" name="no_memo" id="no_memo" class="form-control form-control-sm" value="@(ViewBag.paket_joblist.no_memo)">
                                </div>
                            </div>
                            <div class="col-md-12 mb-2">
                                <div class="form-group">
                                    <label for="">Disiplin</label>
                                    <select name="disiplin_paket" id="disiplin_paket" class="form-control form-control-sm">
                                        <option value="">- Pilih Disiplin -</option>
                                        <option value="STA" @((ViewBag.paket_joblist.disiplin == "STA") ? "selected" : "")>STATIONARY</option>
                                        <option value="ROT" @((ViewBag.paket_joblist.disiplin == "ROT") ? "selected" : "")>ROTATING</option>
                                        <option value="CIV" @((ViewBag.paket_joblist.disiplin == "CIV") ? "selected" : "")>CIVIL</option>
                                        <option value="INS" @((ViewBag.paket_joblist.disiplin == "INS") ? "selected" : "")>INSTRUMENT</option>
                                        <option value="ELEC" @((ViewBag.paket_joblist.disiplin == "ELEC") ? "selected" : "")>ELECTRICAL</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div style="align-items: right">
                                <a href="/paket_joblist" class="btn btn-warning">Kembali</a>
                                @* {{-- <a href="/create_joblist" class="btn btn-primary"><i class="far fa-edit"></i> New</a> --}} *@
                                <button type="submit" class="btn btn-info">Submit</button>
                            </div>
                        </div>
                    </form>      
                </div>
            </div>
        </div>
        <div class="col-xl-9">
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title">Joblist Detail</h4>
                    <div class="panel-heading-btn">
