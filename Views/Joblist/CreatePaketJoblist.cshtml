@{
    ViewData["Title"] = "Create Paket Joblist";
}
<ol class="breadcrumb float-xl-end">
        <li class="breadcrumb-item"><a href="javascript:void(0);">   <i data-feather="file"></i></a></li>
        <li class="breadcrumb-item"><a href="/paket_joblist">Paket Joblist</a></li>
        <li class="breadcrumb-item active" aria-current="page"><span>Create Paket Joblist</span></li>
    </ol>
    <h1 class="page-header">Create Paket Joblist</h1>  
    <div class="row">
        <div class="col-xl-3">
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title">Paket Joblist</h4>
                    <div class="panel-heading-btn">
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                    </div>
                </div> 
                <div class="panel-body">
                    <form id="paket-form">
                        <div class="row mb-2">
                            <div class="col-md-12 mb-2">
                                <div class="form-group">
                                    <label for="">Project</label>
                                    <select name="project_filter" id="project_filter" class="form-control form-control-sm">
                                       
                                    </select> 
                                </div>
                            </div>
                            <div class="col-md-12 mb-2">
                                <div class="form-group">
                                    <label for="">No. Paket</label>
                                    <div class="row">
                                        <div class="col-md-8">
                                            <input type="number" name="no_paket" id="no_paket" class="form-control form-control-sm ">
                                        </div>
                                        <div class="col-md-4 form-check mt-2">
                                            <input class="form-check-input" name="additional" type="checkbox" value="1"/>
                                            <label class="form-check-label" for="">Additional</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 mb-2">
                                <div class="form-group">
                                    <label for="">TagNo. Joblist</label>
                                    <input type="text" name="tag_no" id="tag_no" class="form-control form-control-sm">
                                </div>
                            </div>
                            <div class="col-md-12 mb-2">
                                <div class="form-group">
                                    <label for="">No Memo</label>
                                    <input type="text" name="no_memo" id="no_memo" class="form-control form-control-sm">
                                </div>
                            </div>
                            <div class="col-md-12 mb-2">
                                <div class="form-group">
                                    <label for="">Disiplin</label>
                                    <select name="disiplin_paket" id="disiplin_paket" class="form-control form-control-sm">
                                        <option value="">- Pilih Disiplin -</option>
                                        <option value="STA">STATIONARY</option>
                                        <option value="ROT">ROTATING</option>
                                        <option value="CIV">CIVIL</option>
                                        <option value="INS">INSTRUMENT</option>
                                        <option value="ELEC">ELECTRICAL</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div style="align-items: right">
                                <a href="/paket_joblist" class="btn btn-warning">Kembali</a>
                                {{-- <a href="/create_joblist" class="btn btn-primary"><i class="far fa-edit"></i> New</a> --}}
                                <button type="submit" class="btn btn-info">Submit</button>
                            </div>
                        </div>
                    </form>      
                </div>
            </div>
        </div>
        <div class="col-xl-9">
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title">Joblist Detail</h4>
                    <div class="panel-heading-btn">
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
                    </div>
                </div> 
                <div class="panel-body">
                    <div class="row mb-2">
                        <label for="" class="col-1" ><b>Filter :</b></label>
                        
                        <div class="col-3">
                            <input type="text" name="eqTagNo_filter" id="eqTagNo_filter" class="form-control form-control-sm" placeholder="Cari eqTagNo">
                        </div>
                        <div class="col-3">
                            <select name="disiplin_filter" id="disiplin_filter" class="form-control form-control-sm">
                                <option value="">- Pilih Disiplin -</option>
                                <option value="STA">STATIONARY</option>
                                <option value="ROT">ROTATING</option>
                                <option value="CIV">CIVIL</option>
                                <option value="INS">INSTRUMENT</option>
                                <option value="ELEC">ELECTRICAL</option>
                            </select>
                        </div>
                        <div class="col-2">
                            <button class="btn btn-primary btn-sm" style="width:100%" id="filter"> Filter</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="table-responsive">
                            <table id="table" class="table small table-striped table-bordered dataTables_wrapper " --bs-table-accent-bg: transparant; width="100%">
                                <thead>
                                    <tr>
                                        <th><input class="form-check-input check-all" name="check-all" type="checkbox" /></th>
                                        {{-- <th></th> --}}
                                        <th>TagNo</th>
                                        <th width="10%">Desc</th>
                                        <th>PIC</th>
                                        <th>Status</th>
                                        <th>Jasa</th>
                                        <th>Status Jasa</th>
                                        <th >Material</th>
                                        <th>Status Material</th>
                                        <th>All in</th>
                                        <th>LLDI</th>
                                        <th>Status Job</th>
                                        <th>Dis</th>
                                    </tr>
                                </thead> 
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
@section Scripts
    {
    <script src="~/js/CreatePaketJoblist.js"> </script>
}